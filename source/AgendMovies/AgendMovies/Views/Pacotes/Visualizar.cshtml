    <section>
        @*@if (@TempData["Message"] != null)
        {
            <div id="modal">
             
                    @TempData["Message"]
              
                
            </div>
        }*@
        <h1>Pacotes Atuais</h1>
        <div id="endireitar_o_endireitar">
            <div id="endireitar">
                <div></div>
                <div class="wrapper">
                    @foreach (var p in Model)
                    {
                        if (idSele != null)
                        {
                            if (long.Parse(idSele.ToString()) == p.PacotesId)
                            {
                                <a href="@Url.Action("Selecionar", "Pacotes", new { id = p.PacotesId })"><div class="botao" style="background-color: rgb(0, 148, 255);"><p>@p.nome</p></div></a>
                            }
                            else
                            {
                                <a href="@Url.Action("Selecionar", "Pacotes", new { id = p.PacotesId })"><div class="botao"><p>@p.nome</p></div></a>
                            }
                        }
                        else
                        {
                            <a href="@Url.Action("Selecionar", "Pacotes", new { id = p.PacotesId })"><div class="botao"><p>@p.nome</p></div></a>
                        }


                    }
                    @for (int a = 0; a < 6 - ViewBag.Quant; a++)
                    {
                        <a href="#.html"><div class="botao"><p>- - - - - - - - - -</p></div></a>
                    }
                    <a href="@Url.Action("Delete", "Pacotes")"><div class="botao_vermelho"><p>Excluir</p></div></a>
                    <a href='@Url.Action("Cadastrar", "Pacotes")'><div class="botao_verde"><p>Adicionar +</p></div></a>
                </div>
                <div></div>
            </div>
        </div>
    </section>

    <footer>
        <img src="~/img/logoFooter.png" />
