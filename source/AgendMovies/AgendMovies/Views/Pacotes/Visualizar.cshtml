<body>
    <header>
        <h1>
            <a href="@Url.Action("Home", "Home")">
                <img src="~/img/logo.png" alt="yy" />
            </a>
        </h1>
        <ol>
            <li><a href="@Url.Action("Home", "Home")">Home</a></li>
            <li><a href="@Url.Action("Listar", "Pacotes")">Pacotes</a></li>
