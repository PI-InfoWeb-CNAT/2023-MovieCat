@model AgendMovies.Modelos.Pacotes

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Home</title>
    <link rel="stylesheet" href="~/styles/DashboardPrincipal.css">
    <link href="~/styles/EditarPacote.css" rel="stylesheet" />
    <link rel="icon" href="~/img/Logo_aba.png" />
    <script src="beattlejuice.js"></script>
    <style>
        form button {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <a href="@Url.Action("Index", "Home")" class="logo">
            <img src="~/img/logo.png">
        </a>
        <div class="bx bx-menu" id="menu-icon"></div>
        <ul class="navbar">
            <li><a href="index.html">Home</a></li>
            <li><a href="@Url.Action("Visualizar", "Pacotes")">Pacotes</a></li>
            <li><a href="@Url.Action("VerPacotesComprados", "Employees")">Pacotes comprados</a></li>
            <li><a href="#">Sobre Nós</a></li>
        </ul>
        <div id=md>
            <a href="#.html"><p><img src="~/img/funcionario_Mar.png"></p></a>
            <p id="per">Perfil</p>
        </div>
    </header>
    <!-- 246 -->
    <main>
        <section>


            <div id="organ"><img id="olho" src="~/img/pen.png"><h1>Editar pacote </h1></div>

      
                @using (Html.BeginForm("Editar", "Pacotes", FormMethod.Post,
new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.PacotesId)
                    <ol>
                        <li id="li1">
                            <p>Nome:</p>
                 
                            @Html.TextBoxFor(model => model.nome, new { type = "text", required = "required" })
                        </li>
                        <li id="li2">
                            <p>Ingressos:</p>
                        
                            @Html.TextBoxFor(model => model.ingressos, new { type = "number", required = "required" })
                        </li>
                        <li id="li3">
                            <p>Valor:</p>
                   
                            @Html.TextBoxFor(model => model.valor, new { type = "number", required = "required" })
                        </li>
                        <div id="b">
                            <button type="submit">Salvar</button>
                        </div>
                    </ol>

                    <!--<div id="b">
        <button>Cadastrar</button>
        </div>-->}
        

        </section>
    </main>

    <footer>
        <div>
            <img src="~/img/footerMovieCat.png" style="width: 180px; height: 80px;">
        </div>
        <div>
            <img id="loucura" src="~/img/replitIcon.png">
            <img src="~/img/figmaIcon.png">
            <img src="~/img/githubIcon.png">
        </div>
    </footer>
</body>
</html>

