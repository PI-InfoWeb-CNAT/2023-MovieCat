                                </div>
                            </div>
                        </div>
                        @using (Html.BeginForm("Editar", "Filmes", FormMethod.Post, new { enctype = "multipart/form-data", @class = "disp_para_a_sinopse_e_img" }))
                        {
                            @Html.HiddenFor(model => model.FilmeId)
                            @Html.HiddenFor(model => model.ConteudoDaFoto)
                            @Html.HiddenFor(model => model.TipoDaFoto)
    

                    <div id="local_da_sinopse">

                        <div id="orgph"><div><img src="img/pen.png"></div><h1 class="h1li">Sinopse:</h1></div>
                        <br>
                        @Html.TextBox("arquivo", "", new { type = "file", id = "InputImg", @class = "Esconde" })

                        <div id="ori"><p>Nome do filme: </p>@Html.TextBoxFor(model => model.Nome, new { type = "text", required = "required", id = "NomeFilme" })</div>

                        <div id="ori">
                            <p>Gênero:</p>  @Html.TextBoxFor(model => model.Genero, new { type = "text", required = "required", id = "coloco_um_nome_legal_depois" })

                            @{
                                var gens = new List<SelectListItem>
                                                                                                                                            {
                                            new SelectListItem { Value = "Em Cartaz", Text = "Em Cartaz" },
                                            new SelectListItem { Value = "Em Breve", Text = "Em Breve" },
                                            new SelectListItem { Value = "Filmes em Estreia", Text = "Filmes em Estreia" },

                                        };
                            }

                            <p>Categoria:</p> @Html.DropDownListFor(model => model.Categoria, gens, new { required = "required", id = "Indicativa" })
                        </div>
                        <div>
                            <label for="distribuidora"><p>Distribuidora:</p></label>
                            @Html.TextBoxFor(model => model.Distribuidora, new { type = "text", required = "required", id = "it" })
                        </div>
                        <div id="ori2">
                            <p>Classificação</p>

                            @{
                                var inds = new List<SelectListItem>
                                                                                                                                                                                                                                                                                                                                                                                    {
                                            new SelectListItem { Value = "Livre", Text = "Livre" },
                                                new SelectListItem { Value = "10", Text = "10" },
                                                new SelectListItem { Value = "12", Text = "12" },
                                                new SelectListItem { Value = "14", Text = "14" },
                                                new SelectListItem { Value = "16", Text = "16" },
                                                new SelectListItem { Value = "18", Text = "18" }
                                         };
                            }


                            @Html.DropDownListFor(model => model.Indicativa, inds, new { id = "Indicativa" })

                            <p>Duração</p>
                            @Html.TextBoxFor(model => model.Duracao, new { type = "number", id = "it", min = "10", max = "300" })
                        </div>

                        <br>
                        <div id="dtxt">
                            <p>Sinopse</p>
                            @Html.TextAreaFor(model => model.Sinopse, new { maxlength = 820, id = "txt" })
                        </div>
                        <div id="butd">
                            @*<button type="submit" id="but"><p>SALVAR</p></button>*@
                            <input type="submit" id="but" value="SALVER" />
                        </div>
                    </div>




                        }
                    </section>
                    </div>

                    
</main>
