    <!-- 246 -->

    <main>

        <section>

            <h1>Edição de sessões</h1>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.NomeFilme)
                @Html.HiddenFor(model => model.IdFilme)
                @Html.HiddenFor(model => model.SessaoId)

                <label for="Filmes">


                    @Filme

                </label>

                <div id="seg">
                    <div>
                        <p>Data:</p> @Html.EditorFor(model => model.data)
                    </div>

                </div>
                <div id="SalaQunt">
                    <div>
                        <p>Sala</p> @Html.TextBoxFor(model => model.Sala, new { type = "text", required = "required", minlength = "1", maxlength = "8", size = "10", @class = "SalaQuantidade" })
                    </div>

                </div>



                <div class="horario">
                    <div>
                        <p>Horário de início:</p>
                        @Html.TextBoxFor(model => model.horaInicio, new { type = "time", required = "required" })
                    </div>
                    <div>
                        <p>Duração</p>
                        @Html.TextBoxFor(model => model.Duracao, new { type = "number", required = "required" })
                    </div>
                </div>
                <div>
                    <div>
                        <p>Idioma:</p>
                        @Html.EnumDropDownListFor(model => model.Idioma, new { required = "required" })
                    </div>
                </div>

