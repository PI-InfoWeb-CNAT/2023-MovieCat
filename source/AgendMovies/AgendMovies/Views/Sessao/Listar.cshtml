@model IEnumerable<AgendMovies.Modelos.Filme>

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Home</title>
    <link href="@Url.Content("~/estilos/ListarSessoes.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/estilos/Principal.css")" rel="stylesheet" type="text/css" />
    <link rel="icon" href="img/Logo_aba.png" />

</head>
<body>
    <header>
        <h1>
            <a href="index.html">
                <img src="~/img/logo.png" alt="yy" />
            </a>
        </h1>
        <ol>
            <li><a href="#">Home</a></li>
            <li><a href="#">Filmes</a></li>
            <li><a href="#">Sessões</a></li>
            <li><a href="#">Funcionários</a></li>
            <li><a href="#">Pacotes</a></li>
        </ol>
        <div>
            <p><a href="#"><img src="~/img/funcionario_Mar.png" /></a></p>
            <p>Perfil</p>
        </div>
    </header>
    <!-- 246 -->

    <main>

        <section class="filmes">
            <h2 class="heading">Filmes que possuem sessões cadastradas no sistema</h2>
            <!-- movies conatiner -->
            <div class="movies-container">
                <!-- caixa 1 -->
                @foreach (var filme in Model)
                {
                    <div class="box">
                        <div class="box-img">
                            @if (filme.ConteudoDaFoto == null)
                            {
                                <img src="~/img/image 4.png">
                            }
                            else
                            {
                                <img  src="@Url.Action("GetLogoTipo", "Filmes", new { id = filme.FilmeId })">
                            }
                        </div>
                       
                        <div class="dh12">
                            <div>
                                <h3>@filme.Nome</h3>
                                <span>@filme.Duracao | @filme.Genero</span>
                            </div>
                            <div>
                                @{
                                    var classi = filme.Indicativa + ".png";
                                }
                                <img src="~/img/+@classi">
                            </div>
                        </div>
                        <div>
                            <ol class="botoes">
                                <a href="#">
                                <li><img src="~/img/oljo.png"></li>
                                <p>Ver </p></a>
                            </ol>
                        </div>


                    </div>
                }


            </div>

        </section>
    </main>
    <footer>
        <img src="~/img/logoFooter.png" />
        <ol>
            <li><a href=#><img src="~/img/github.png" /></a></li>
            <li><a href=#><img src="~/img/facebook.png" /></a></li>
            <li><a href=#><img src="~/img/twitter.png" /></a></li>
        </ol>
    </footer>
</body>
</html>
