@model AgendMovies.Modelos.Sessao

@{
    Layout = null;
    var nulo = new List<SelectListItem>
{
        new SelectListItem { Value = "-", Text = "---------" }
    };
    var fs = ViewBag.Filmes as SelectList;
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>MovieCat</title>

    <link rel="stylesheet" href="@Url.Content("~/styles/EditarSessao.css")" />
    <link rel="stylesheet" href="@Url.Content("~/styles/Principal.css")" />
    <link rel="icon" href="~/img/Logo_aba.png" />
    <style>
        .DiaDaSemana {
            display: flex;
            justify-content: space-around;
            align-content: center;
            flex-wrap: wrap;
        }
        #SalaQunt {
            margin: 1em 0;
            display: flex;
            justify-content: space-around;
            align-content: center;
            flex-wrap: wrap;
        }
         #SalaQunt > div{
              display: flex;
         
            align-content: center;
         }
        .SalaQuantidade{
            background-color: black;
            border-color: white;
        }
        option {
            color: white;
            background-color: black;
        }
    </style>
</head>
<body>
    <header>
        <h1>
            <a href="@Url.Action("Index", "Home")">
                <img src="~/img/logo.png" alt="yy" />
            </a>
        </h1>
        <ol>
            <li><a href="@Url.Action("Home", "Adm")">Home</a></li>
            <li><a href="@Url.Action("Listar", "Filmes")">Filmes</a></li>
            <li><a href="@Url.Action("Listar", "Sessao")">Sessões</a></li>
            <li><a href="@Url.Action("Listar", "Funcionario")">Funcionários</a></li>
        </ol>
        <div>
            <p><a href="#"><img src="~/img/funcionario_Mar.png" /></a></p>
            <p>Perfil</p>
        </div>
    </header>
    <!-- 246 -->

    <main>

        <section>

            <h1>Cadastro de sessões</h1>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <label for="Filmes">
                    <p>Filme:</p>
                    @if (ViewBag.Filmes != null && fs.Count() != 0)
                    {
                        @Html.DropDownListFor(model => model.NomeFilme, ViewBag.Filmes as SelectList, new { required = "required", id = "Filmes" })
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.NomeFilme, nulo, new { required = "required", id = "Filmes" })
                    }
                </label>

                <div id="seg">
                    <div>
                        <p>Dia Final:</p> <input type="date" name="datai" required />
                    </div>
                    <div>
                        <p>Dia Final:</p> <input type="date" name="dataf" required  />
                    </div>
                </div>
                <div id="SalaQunt">
                    <div>
                            <p>Sala</p> @Html.TextBoxFor(model => model.Sala, new { type = "text", required = "required", minlength = "1", maxlength = "8", size = "10", @class = "SalaQuantidade" })
                    </div>
                    <div>
                        <p>Quantidade por dia:</p> <input type="number" name="quant" required min="1" class="SalaQuantidade"/>
                     </div>
                </div>

              

                <div class="horario">
                    <div>
                        <p>Horário de início:</p>
                        @Html.TextBoxFor(model => model.horaInicio, new { type = "time", required = "required" })
                    </div>
                    <div>
                        <p>Duração</p>
                        @Html.TextBoxFor(model => model.Duracao, new { type = "number", required = "required" })
                    </div>
                </div>
                <div>
                    <div>
                        <p>Duração</p>
                        @Html.EnumDropDownListFor(model => model.Idioma, new { required = "required" })
                    </div>
                </div>

                @*@Html.LabelFor(model => model.nacional)

                @Html.EditorFor(model => model.nacional, new { @class = "control-label col-md-2" })

                @Html.LabelFor(model => model.dub)

                @Html.EditorFor(model => model.dub, new { @class = "control-label col-md-2" })


                @Html.LabelFor(model => model.leg)

                @Html.EditorFor(model => model.leg, new { @class = "control-label col-md-2" })*@






                <div id="b">
                    <div>
                        <input type="submit" id="botao" value="CADASTRAR">
                    </div>
                </div>

            }










        </section>
    </main>
    <footer>
        <img src="~/img/logoFooter.png" />
        <ol>
            <li><a href=#><img src="~/img/github.png" /></a></li>
            <li><a href=#><img src="~/img/facebook.png" /></a></li>
            <li><a href=#><img src="~/img/twitter.png" /></a></li>
        </ol>
    </footer>
</body>
</html>