    <style>
        .botoes {
            display: flex;
            align-items: stretch;
            border: none;
            margin-top: 10px;
            width: 100%;
        }
        .botoes p {
            border: none !important;
            width: 100% ;
            text-align: center;
            justify-content: center !important;
            margin: 5px 0 !important;
            padding: 0 !important;
        }
        .botoes a{
            display: flex;
            justify-content: center;
            align-content: space-between;
            border: none;
            flex-wrap: wrap;
        }
        .botoes a li{
             border: none;
            display: block;
            width: min-content;
            background-color: white;
            padding:10px;
            box-sizing: border-box;
             display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 100%;
        }
        .botoes a li img{
            margin: 0 !important;
        }
        #infodia1 {
            display: flex; 
            overflow: auto;
        }
        #infodia1 > div p{
             width: 100% ;
        }
        #infodia1 > div {
            display: flex;
            justify-content: center;
            width: min-content;
            align-content: center;
            flex-wrap: wrap;
            margin: 0 10px;
        }

        /* Personalizando barrinha */
        div#infodia1::-webkit-scrollbar {
            /* largura da barra de rolagem */
            height: 9px;
        }

        div#infodia1::-webkit-scrollbar-thumb {
            background-color: red; /* cor do "polegar" da barra de rolagem */
            border-radius: 5px;
            /* borda arredondada do "polegar" */
        }

        div #infodia1::-webkit-scrollbar-track {
            background-color: rgba(255, 255, 255, 0.1); /* cor do fundo da barra de rolagem */
        }
        .FotoPerfilHeader {
            width: 62px;
            height: 62px;
            border-radius: 100%;
