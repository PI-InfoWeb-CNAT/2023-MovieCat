@model AgendMovies.Modelos.Cliente

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
    <link rel="stylesheet" href="@Url.Content("~/styles/login_cliente.css")">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
          integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>

    <div class="container">

        <div id="logo"><img src="~/img/logo.png"></div>

        <div class="content first-content">
            <div class="first-column">
                <h2 class="title title-primary">Bem Vindo de Volta!</h2>
                <p class="description description-primary">Para se manter conectado conosco</p>
                <p class="description description-primary">por favor faça login com suas informações pessoais</p>
                <button id="signin" class="btn btn-primary">entrar</button>
            </div>


            <div class="second-column">
                <h2 class="title title-second">Criar Uma Conta</h2>

                <!--<p class="description description-second">or use your email for registration:</p>-->

                @using (Html.BeginForm("Cadastrar", "Cliente", FormMethod.Post,
                new { enctype = "multipart/form-data", @class = "form" }))

                {

                    <label class="label-input" for="">
                        <i class="far fa-user icon-modify"></i>
                        @Html.EditorFor(model => model.Nome, new { type = "text", required = "required", size = "40" })
                    </label>

                    <label class="label-input" for="">
                        <i class="far fa-user icon-modify"></i>
                        @Html.EditorFor(model => model.Cpf, new { type = "text", required = "required", size = "40" })
                    </label>

                    <label class="label-input" for="">
                        <i class="far fa-envelope icon-modify"></i>
                        @Html.EditorFor(model => model.Email, new { type = "email", required = "required", size = "40" })
                    </label>

                    <label class="label-input" for="">
                        <i class="fas fa-lock icon-modify"></i>
                        @Html.TextBoxFor(model => model.Senha, new { type = "password", required = "required", size = "40" })
                    </label>


                    <button class="btn btn-second">Inscreva-se</button>
                }
            </div><!-- second column -->
        </div><!-- first content -->
        <div class="content second-content">
            <div class="first-column">
                <h2 class="title title-primary">Olá Caro Cliente</h2>
                <p class="description description-primary">Insira seus dados pessoais</p>
                <p class="description description-primary">e comece a jornada conosco</p>
                <button id="signup" class="btn btn-primary">inscreva-se</button>
            </div>
            <div class="second-column">
                <h2 class="title title-second">Entrar como Usuário</h2>

                <!--<p class="description description-second">or use your email account:</p>-->
                @using (Html.BeginForm("Login", "Cliente", FormMethod.Post,
                         new { enctype = "multipart/form-data", @class = "form" }))

                {
                    <label class="label-input" for="">
                        <i class="far fa-envelope icon-modify"></i>
                        @Html.TextBoxFor(model => model.Email, new { type = "email", required = "required", placeholder = "Email" })
                    </label>

                    <label class="label-input" for="">
                        <i class="fas fa-lock icon-modify"></i>
                        @Html.TextBoxFor(model => model.Senha, new { type = "password", required = "required", placeholder = "Senha" })
                    </label>

                    <a class="password" href="#">esqueceu sua senha?</a>
                    <button class="btn btn-second"><a href="PerfilCliente.html">entrar</a></button>
                }
            </div><!-- second column -->
        </div><!-- second-content -->
    </div>
    <script src="@Url.Content("~/script/login.js")"></script>

    @* Scripts da validação *@
    <script src="@Url.Content("~/scripts/jquery-3.4.1.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")">
    </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")">
    </script>
    @* Scripts da validação *@
</body>
</html>



